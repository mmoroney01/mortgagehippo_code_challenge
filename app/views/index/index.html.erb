<h1>Coin Machine API</h1>

<%= form_tag("/coins", method: "post") do %>
  <%= text_field_tag :name, nil, placeholder: "Name of Coin" %><br>
  <%= number_field_tag :value, nil, placeholder: "Value of Coin" %><br>
  <%= submit_tag("Create Coin") %>
<% end %>

<br>

<%= form_tag("/coins/:id/edit", method: "get") do %>
  <%= text_field_tag :name, nil, placeholder: "Name of Coin" %><br>
  <%= number_field_tag :value, nil, placeholder: "Value of Coin" %><br>
  <%= submit_tag("Update Coin") %>
<% end %>

<br>

<%= form_tag("/coins/:id", method: "delete") do %>
  <%= text_field_tag :name, nil, placeholder: "Name of Coin" %><br>
  <%= number_field_tag :value, nil, placeholder: "Value of Coin" %><br>
  <%= submit_tag("Delete Coin") %>
<% end %>

<br>

<%= button_to 'View All Coins', coins_path, method: "get" %>

<br>

<%= form_tag("/coins/:id", method: "get") do %>
  <%= text_field_tag :name, nil, placeholder: "Name of Coin" %><br>
  <%= number_field_tag :value, nil, placeholder: "Value of Coin" %><br>
  <%= submit_tag("View Coin") %>
<% end %>

<br>

<%= button_to "View Coin Total", coins_total_path, method: "get" %>

<br>

<form action="/transactions" method="post">
<button id="create-transaction-button">Deposit a Coin</button><br>
<input type="text" name="name" placeholder="What's the name of your coin?"><br>
<input type="integer" name="value" placeholder="How much is your coin worth?">
</form>

<br>

<form action="/transactions" method="get">
<button id="see-all-transactions">See All Transactions</button>
</form>

<br>

<form action="/apiusers/:apiuser_id/transactions" method="get">
<button id="view-all-transactions-one-user">View All Transactions of One User</button><br>
<input type="text" name="api_key" placeholder="What's the API Key?"><br>
</form>